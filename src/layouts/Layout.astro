---
import {Menu} from "../components/Menu";
import {Copyright} from "../components/Copyright";
interface Props {
    title: string;
}

const {title} = Astro.props;

---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Fullstack Software Engineer"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/logo-dark-on-light.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <!-- Primary Meta Tags -->
    <title>Elias Witt - Software Engineer</title>
    <meta name="title" content="Elias Witt - Software Engineer" />
    <meta name="description" content="Full-stack engineer who designs, builds, and ships, beautiful and blazingly fast software." />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://eliaswitt.com/" />
    <meta property="og:title" content="Elias Witt - Software Engineer" />
    <meta property="og:description" content="Full-stack engineer who designs, builds, and ships, beautiful and blazingly fast software." />
    <meta property="og:image" content="https://eliaswitt.com/eliaswitt.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://eliaswitt.com/" />
    <meta property="twitter:title" content="Elias Witt - Software Engineer" />
    <meta property="twitter:description" content="Full-stack engineer who designs, builds, and ships, beautiful and blazingly fast software." />
    <meta property="twitter:image" content="https://eliaswitt.com/eliaswitt.png" />

    <!-- Meta Tags Generated with https://metatags.io -->
    <meta property="og:image" content="https://eliaswitt.com/eliaswitt.png">
    <meta property="og:image:type" content="image/svg+xml">
    <meta property="og:image:width" content="1024">
    <meta property="og:image:height" content="1024">

    <title>{title}</title>
</head>
<body class="flex flex-col bg-dark_blue min-h-dvh">

<!-- navbar -->
<div class="flex-none w-full flex md:mt-3 mb-2 h-10 max-w-[1300px] mx-auto md:px-10">
    <!-- logo -->
    <div class="relative w-min top-1 md:left-0 right-5 z-10 pl-10 md:pl-0">
        <a class="group" href="/">
            <!-- shadow -->
            <svg class="absolute fill-transparent group-hover:fill-very_dark_blue transition duration-500 md:h-10 w-12" xmlns="http://www.w3.org/2000/svg" width="97.35" height="51.55"
                 viewBox="0 0 97.35 51.55">
